{
  "name": "pcesports",
  "description": "PC Esports website",
  "version": "4.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxorlovsky/pce-fe"
  },
  "scripts": {
    "clean": "rm -rf ./public/dist",
    "jslint": "node_modules/.bin/jshint ./fe/src",
    "stylelint": "node_modules/.bin/stylelint ./fe/styles/**/*.scss, ./fe/src/components/**/*.scss --syntax scss --cache --config stylelint.config.json",
    "serve": "node_modules/.bin/ws",
    "webpack": "node_modules/.bin/webpack --progress --config webpack.config.js",
    "build": "yarn clean && yarn jslint && yarn stylelint && yarn webpack",
    "release": "git pull && yarn && yarn jslint && yarn stylelint && node_modules/.bin/webpack --config webpack.config.js --env.production",
    "watch": "node_modules/.bin/webpack-dev-server"
  },
  "dependencies": {
    "@babel/core": "^7.8.3",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "axios": "0.19.2",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "6.26.0",
    "bootstrap": "4.4.1",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-plugin-vue": "^6.1.2",
    "hammerjs": "2.0.8",
    "html-webpack-harddisk-plugin": "^1.0.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "replace-in-file-webpack-plugin": "^1.0.6",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "vue": "2.6.11",
    "vue-analytics": "5.22.1",
    "vue-directive-tooltip": "1.6.3",
    "vue-disqus": "3.0.5",
    "vue-router": "3.1.5",
    "webpack-dev-server": "^3.10.1"
  },
  "devDependencies": {
    "font-awesome": "4.7.0",
    "image-loader": "0.0.1",
    "marked": "0.8.0",
    "node-sass": "4.13.1",
    "node-sass-glob-importer": "^5.3.2",
    "postcss-loader": "3.0.0",
    "promise-polyfill": "8.1.3",
    "raw-loader": "4.0.0",
    "require-dir": "1.2.0",
    "sass": "1.24.0",
    "sass-loader": "7.1.0",
    "stylelint": "13.0.0",
    "v-tooltip": "^2.0.3",
    "vue-loader": "15.8.3",
    "vue-template-compiler": "2.6.11",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.10",
    "webpack-dashboard": "3.2.0"
  }
