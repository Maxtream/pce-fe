{
  "name": "pcesports",
  "description": "PC Esports website",
  "version": "3.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxorlovsky/pce-fe"
  },
  "scripts": {
    "clean": "rm -rf ./public/dist",
    "jslint": "node_modules/.bin/jshint ./fe/src",
    "stylelint": "node_modules/.bin/stylelint ./fe/styles/**/*.scss, ./fe/src/components/**/*.scss --syntax scss --cache --config stylelint.config.json",
    "webpack": "node_modules/.bin/webpack --progress --config webpack.config.js",
    "watch": "node_modules/.bin/webpack --progress --watch --config webpack.config.js",
    "build": "yarn clean && yarn jslint && yarn stylelint && node_modules/.bin/gulp copy && yarn webpack",
    "release": "git pull && yarn && yarn clean && yarn jslint && yarn stylelint && node_modules/.bin/gulp copy && yarn webpack --env.release",
    "serve": "node_modules/.bin/ws"
  },
  "dependencies": {
    "axios": "0.18.0",
    "babel-polyfill": "6.26.0",
    "bootstrap": "4.0.0",
    "hammerjs": "2.0.8",
    "vue": "2.5.16",
    "vue-analytics": "5.10.1",
    "vue-directive-tooltip": "1.4.5",
    "vue-disqus": "2.0.4",
    "vue-router": "3.0.1"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-loader": "7.1.4",
    "babel-preset-env": "1.6.1",
    "babel-preset-es2015": "6.24.1",
    "css-loader": "0.28.11",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "font-awesome": "4.7.0",
    "gulp": "3.9.1",
    "image-loader": "0.0.1",
    "jshint": "2.9.5",
    "local-web-server": "2.5.1",
    "marked": "0.3.19",
    "node-sass": "4.8.3",
    "node-sass-glob-importer": "5.1.1",
    "postcss-loader": "2.1.3",
    "promise-polyfill": "7.1.2",
    "raw-loader": "0.5.1",
    "require-dir": "0.3.2",
    "run-sequence": "2.1.0",
    "sass": "1.1.1",
    "sass-loader": "6.0.7",
    "stylelint": "9.2.0",
    "v-tooltip": "^2.0.0-rc.31",
    "vue-loader": "14.2.2",
    "vue-template-compiler": "2.5.16",
    "webpack": "4.5.0",
    "webpack-cli": "2.0.14",
    "webpack-dashboard": "1.1.1"
  }
}
